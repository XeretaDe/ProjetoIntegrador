@model IEnumerable<Reviews>
@inject SignInManager<IdentityUser> signInManager;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var photoPath = "~/images/" + (item.Imagem ?? "noimage.jpg");
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleReview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionReview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentReview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    <img class="card-img-top" src="@photoPath" asp-append-version="true">
                </td>
                @if (signInManager.IsSignedIn(User))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
