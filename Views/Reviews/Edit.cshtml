@model ProjetoIntegrador.ViewModels.ReviewCreateViewModel

@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TitleReview" class="control-label"></label>
                <input asp-for="TitleReview" class="form-control" />
                <span asp-validation-for="TitleReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionReview" class="control-label"></label>
                <input asp-for="DescriptionReview" class="form-control" />
                <span asp-validation-for="DescriptionReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentReview" class="control-label"></label>
                <input asp-for="ContentReview" class="form-control" />
                <span asp-validation-for="ContentReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        })
    });
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
