@model ProjetoIntegrador.ViewModels.ArticleCreateViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-xl font-bold">Edit</h1>

<h4>Articles</h4>
<hr />
<div class="min-h-screen">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group flex flex-col ">
                <label asp-for="TitleArticle" class="control-label font-inter text-lg font-medium"></label>
                <input asp-for="TitleArticle" class="bg-red-200 rounded-md p-2 w-60" />
                <span asp-validation-for="TitleArticle" class="text-danger"></span>
            </div>
            <div class="form-group flex flex-col">
                <label asp-for="DescriptionArticle" class="control-label control-label font-inter text-lg font-medium"></label>
                <input asp-for="DescriptionArticle" class="form-control bg-red-200 rounded-md p-2 w-60" />
                <span asp-validation-for="DescriptionArticle" class="text-danger"></span>
            </div>
            <div class="form-group flex flex-col">
                <label asp-for="ContentArticle" class="control-labe font-inter text-lg font-medium"></label>
                <input asp-for="ContentArticle" class="form-control bg-red-200 rounded-md p-2 w-60" />
                <span asp-validation-for="ContentArticle" class="text-danger"></span>
            </div>
            <div class="form-group flex flex-col">
                <label asp-for="Photo" class="control-label font-inter text-lg font-medium "></label>
                <div class="col-sm-10">
                    <input asp-for="Photo" class="form-control custom-file-input " />
                    <label class="custom-file-label bg-red-400"></label>
                </div>
            </div>
            <div class="form-group w-20 bg-green-300 flex justify-center rounded-full hover:scale-110 delay-75 hover:cursor-pointer mt-10">
                <input type="submit" value="Save" class="font-Inter hover:cursor-pointer" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
<script>
    $(document).ready(function (){
        $('.custom-file-input').on("change", function()
        {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        })
    });
</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
