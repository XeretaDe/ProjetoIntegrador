@model ProjetoIntegrador.Models.Articles

@{
    ViewData["Title"] = "Delete";
}
<div class="min-h-screen">
    <div class="flex place-content-center mt-14">
        <h3 class="text-4xl font-inter font-bold">Are you sure you want to delete this?</h3>
    </div>
    <div>
        <div class="flex place-content-center mt-6">
            <h1 class="text-2xl font-inter font-bold">
                @Html.DisplayFor(model => model.Title)
            </h1>

        </div>

        <div class=" flex place-content-center">
            <form class="flex gap-6" asp-action="Delete">
                <div>
                    <input type="submit" value="Delete" class="btn btn-danger bg-red-400 w-20 rounded-full" />
                </div>
                <div>
                    <a class="bg-green-400 w-40  rounded-full" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
