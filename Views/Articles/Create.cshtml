@model ProjetoIntegrador.ViewModels.ArticleCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Articles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleArticle" class="control-label"></label>
                <input asp-for="TitleArticle" class="form-control" />
                <span asp-validation-for="TitleArticle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionArticle" class="control-label"></label>
                <input asp-for="DescriptionArticle" class="form-control" />
                <span asp-validation-for="DescriptionArticle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentArticle" class="control-label"></label>
                <input asp-for="ContentArticle" class="form-control" />
                <span asp-validation-for="ContentArticle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Photo" class="form-control custom-file-input"  />
                    <label class="custom-file-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function (){
            $('.custom-file-input').on("change", function()
            {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
