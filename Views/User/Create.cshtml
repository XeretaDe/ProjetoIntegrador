@model ProjetoIntegrador.ViewModels.RegisterUser

@{
    ViewData["Title"] = "Create";
}

<div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
        <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
            <h1 class="mb-8 text-3xl text-center">Sign up</h1>
            <div asp-validation-summary="All" class="mt-10">
                <form method="post">
                    <input asp-for="Nome"
                           class="block border border-grey-light w-full p-3 rounded mb-4"
                           placeholder="Full Name" />

                    <input asp-for="Login"
                           class="block border border-grey-light w-full p-3 rounded mb-4"
                           placeholder="Email" />

                    <input asp-for="Password"
                           class="block border border-grey-light w-full p-3 rounded mb-4"
                           placeholder="Password" />
                    <input asp-for="confirmSenha"
                           class="block border border-grey-light w-full p-3 rounded mb-4"
                           placeholder="Confirm Password" />

                    <button type="submit"
                            class="w-full text-center py-3 rounded bg-green-400 text-white hover:bg-green-dark focus:outline-none my-1">
                        Create Account
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
